<div class="col-md-4 mb-4">
  <div class="card shadow-sm h-100">
    <img src="<%= exp.image_url || 'https://via.placeholder.com/400x250' %>" class="card-img-top" alt="<%= exp.venue_name %>">
    <div class="card-body">
      <h5 class="card-title"><%= exp.venue_name %></h5>
      <p class="card-text"><%= exp.description.truncate(100) %></p>
      <p class="text-muted">Price: $<%= exp.price %></p>
      <p class="text-muted">Category: <%= exp.category.name %></p>
    </div>
  </div>
</div>
